<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenTheme"  parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Custom" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ToolBarTheme"  parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/text_selection_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- remove shadow below action bar -->
        <item name="android:elevation">0dp</item>
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/text_selection_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolBarThemeGrey"  parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/arrow_grey</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- remove shadow below action bar -->
        <item name="android:elevation">0dp</item>
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Style_action_search">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="OpenSansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>



</resources>
